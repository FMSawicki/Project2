const mongoose = require("../db/connection");
const Schema = mongoose.Schema;

const User = new Schema({
  username: String,
  password: String,
  Items: [
    {
      type: Schema.Types.ObjectId,
      ref: "Item"
    }
  ],
  Bids: [
    {
      type: Schema.Types.ObjectId,
      ref: "Bid"
    }
  ]
});
module.exports = mongoose.model("User", User);
